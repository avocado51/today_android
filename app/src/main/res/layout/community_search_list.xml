<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/relavtive_community_following_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp">

        <ImageView
            android:id="@+id/community_search_following_img"
            tools:background="@drawable/person"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:background="@drawable/community_profil_img" />

        <TextView
            android:id="@+id/community_search_following_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/community_search_following_img"
            android:letterSpacing="-0.019"
            android:text="오늘은"
            android:textColor="#424242"
            android:fontFamily="@font/notosanskr_medium_hestia"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/community_search_following_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_below="@id/community_search_following_name"
            android:layout_toRightOf="@id/community_search_following_img"
            android:letterSpacing="-0.01"
            android:text="PINK"
            android:layout_marginBottom="16dp"
            android:textColor="#9e9e9e"
            android:fontFamily="@font/notosanskr_regular_hestia"
            android:textSize="13sp" />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/relavtive_community_following_list"
        android:background="#eeeeee" />
</RelativeLayout>