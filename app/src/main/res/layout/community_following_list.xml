<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relavtive_community_following_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp">

        <ImageView
            android:id="@+id/community_following_img"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/community_profil_img"
            tools:background="@drawable/person" />

        <TextView
            android:id="@+id/community_following_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/community_following_img"
            android:fontFamily="@font/notosanskr_medium_hestia"
            android:letterSpacing="-0.019"
            android:text="오늘은"
            android:textColor="#545454"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/community_following_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/community_following_name"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/community_following_img"
            android:fontFamily="@font/notosanskr_regular_hestia"
            android:letterSpacing="-0.017"
            android:text="20shinee"
            android:textColor="#9e9e9e"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/community_btn_follower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="22dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/button_following" />

        <ImageView
            android:id="@+id/community_btn_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="22dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/button_follow"
            android:visibility="gone"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/relavtive_community_following_list"
        android:background="#eeeeee" />
</RelativeLayout>