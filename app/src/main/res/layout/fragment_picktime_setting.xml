<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<LinearLayout
    android:id="@+id/ll_time_pick_text"
    android:layout_centerInParent="true"
    android:orientation="horizontal"
    android:layout_alignParentTop="true"
    android:layout_marginTop="25dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="우리 "
        android:letterSpacing="-0.01"
        android:textColor="#545454"
        />
    <TextView
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="몇시에 "
        android:letterSpacing="-0.01"
        android:textColor="#545454"
        />
    <TextView
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="만날까요?"
        android:letterSpacing="-0.01"
        android:textColor="#545454"
        />
</LinearLayout>
    <TimePicker
        android:layout_marginTop="64dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ll_time_pick_text"
        android:id="@+id/datePicker1"
        android:layout_width="296dp"
        android:layout_height="219dp"
        android:timePickerMode="spinner"/>

    <Button
        android:id="@+id/btn_act_firstsetting_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/custom_button_radius"
        android:backgroundTint="#c9c9c9"
        android:text="다음"
        android:textAlignment="center"
        android:textColor="#FFFFFF" />
    <Button
        android:visibility="gone"
        android:id="@+id/btn_act_firstsetting_next_active"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/custom_button_radius"
        android:backgroundTint="@color/dandelion"
        android:text="다음"
        android:textAlignment="center"
        android:textColor="#FFFFFF" />

</RelativeLayout>