<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp">

    <ImageView
        android:id="@+id/community_user_img"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/person" />

    <TextView
        android:id="@+id/community_user_id_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/community_user_img"
        android:letterSpacing="-0.02"
        android:text="오늘은"
        android:fontFamily="@font/notosanskr_medium_hestia"
        android:textColor="#424242"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/community_status_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/community_user_id_txt"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/community_user_img"
        android:fontFamily="@font/notosanskr_regular_hestia"
        android:letterSpacing="-0.017"
        android:text="건드리면 물어요"
        android:textColor="#757575"
        android:textSize="13sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/community_emotion_date_txt"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:text="11월 13일"
        android:textColor="@color/very_light_pink"
        android:textSize="13sp"
        android:letterSpacing="-0.017"
        />
</RelativeLayout>