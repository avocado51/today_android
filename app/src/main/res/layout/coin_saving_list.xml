<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp">
    <RelativeLayout
        android:id="@+id/ll_coin_save_list"
        android:layout_width="match_parent"
        android:layout_height="63dp">
    <TextView
        android:id="@+id/coin_saving_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11.11"
        android:textColor="#ffdb08"
        android:textSize="14dp"
        android:fontFamily="@font/notosanskr_medium_hestia"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"/>
        <TextView
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/coin_saving_date"
            android:id="@+id/coin_saving_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:fontFamily="@font/notosanskr_medium_hestia"
            android:text="메시지"
            />
        <TextView
            android:id="@+id/coin_saving_amount"
            android:layout_toLeftOf="@+id/coin_saving_won"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:fontFamily="@font/notosanskr_medium_hestia"
            android:textStyle="normal"
            android:textColor="#757575"
            android:text="+ 금액"
            />
        <TextView
            android:id="@+id/coin_saving_won"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:fontFamily="@font/notosanskr_medium_hestia"
            android:textStyle="normal"
            android:textColor="#757575"
            android:text=" 원"
            />
    </RelativeLayout>
    <View
        android:layout_below="@+id/ll_coin_save_list"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"/>

</RelativeLayout>