<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="14dp"
    android:layout_marginTop="21dp">


    <ImageView
        android:layout_marginLeft="20dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/cheerup_feeling_mark"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/img_sns_profile_emotion_good_2_40_px"
        />

    <TextView
        android:layout_toRightOf="@+id/cheerup_feeling_mark"
        android:fontFamily="@font/notosanskr_medium_hestia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cheerup_msg_date"
        android:letterSpacing="-0.02"
        tools:text="2018년 11월 16일"
        android:textColor="#c9c9c9"
        android:textSize="10sp"
        android:layout_marginLeft="8dp"/>
    <TextView
        android:backgroundTint="#f5f5f5"
        android:background="@drawable/button_border"
        android:id="@+id/cheerup_msg_txt"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginRight="77dp"
        tools:text="위로의 메시지"
        android:paddingLeft="12dp"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:textColor="#757575"
        android:textSize="12sp"
        android:letterSpacing="-0.01"
        android:fontFamily="@font/notosanskr_medium_hestia"
        android:layout_below="@+id/cheerup_msg_date"
        android:layout_toRightOf="@+id/cheerup_feeling_mark"
        android:layout_marginLeft="8dp"
        />
</RelativeLayout>