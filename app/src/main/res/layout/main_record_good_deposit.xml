<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/img_main_save_1"
        android:id="@+id/rl_deposit_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/logo_main"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_main"/>

        <RelativeLayout
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="27dp"
            android:layout_below="@+id/logo_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_title"
                android:text="오늘"
                android:textSize="24sp"
                android:textColor="#424242"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="10sp"
                android:fontFamily="@font/notosanskr_regular_hestia"
                android:layout_width="wrap_content"
                android:layout_height="34dp" />
            <TextView
                android:layout_toRightOf="@+id/txt_title"
                android:id="@+id/txt_2"
                android:text=" 하루도"
                android:textSize="24sp"
                android:textColor="#424242"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="10sp"
                android:fontFamily="@font/notosanskr_regular_hestia"
                android:layout_width="wrap_content"
                android:layout_height="34dp" />

            <ImageView
                android:layout_alignParentTop="true"
                android:layout_marginTop="59dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/stroke_1"/>
            <TextView
                android:layout_below="@+id/txt_title"
                android:text="행복하게"
                android:id="@+id/txt3"
                android:textSize="24sp"
                android:textColor="#424242"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="10sp"
                android:fontFamily="@font/notosanskr_bold_hestia"
                android:layout_width="wrap_content"
                android:layout_height="34dp" />

            <TextView
                android:layout_below="@+id/txt_title"
                android:text=" 보내요"
                android:id="@+id/txt4"
                android:layout_toRightOf="@+id/txt3"
                android:textSize="24sp"
                android:textColor="#424242"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="10sp"
                android:fontFamily="@font/notosanskr_regular_hestia"
                android:layout_width="wrap_content"
                android:layout_height="34dp" />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/line1"
        android:layout_below="@+id/rl_deposit_txt"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="#f5f5f5"/>
    <RelativeLayout
        android:id="@+id/rl_img_aver_coin"
        android:layout_below="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginBottom="18dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/main_save_1_coin"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="89dp"
            android:id="@+id/txt_average_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:textColor="#212121"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="5sp"
            android:fontFamily="@font/notosanskr_medium_hestia"
            android:gravity="center_horizontal"
            android:text="2,500 원"
            />
    </RelativeLayout>
<RelativeLayout
    android:id="@+id/rl_aver_coin_text"
    android:layout_below="@+id/rl_img_aver_coin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginLeft="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
<TextView
    android:id="@+id/txt_today"
    android:layout_width="wrap_content"
    android:layout_height="26dp"
    android:textSize="15sp"
    android:fontFamily="@font/notosanskr_regular_hestia"
    android:textColor="#616161"
    android:letterSpacing="-0.02"
    android:lineSpacingExtra="11sp"
    android:text="오늘은 "/>
        <TextView
            android:layout_toRightOf="@+id/txt_today"
            android:id="@+id/txt_good_deposit_user_name"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:textSize="15sp"
            android:fontFamily="@font/notosanskr_bold_hestia"
            android:textColor="#212121"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="11sp"
            android:text="이승언"/>
        <TextView
            android:layout_toRightOf="@+id/txt_good_deposit_user_name"
            android:id="@+id/txt_same_age_bold"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:textSize="15sp"
            android:fontFamily="@font/notosanskr_bold_hestia"
            android:textColor="#212121"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="11sp"
            android:text=" 님과 동갑인 사용자"/>
        <TextView
            android:layout_toRightOf="@+id/txt_same_age_bold"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:textSize="15sp"
            android:fontFamily="@font/notosanskr_regular_hestia"
            android:textColor="#616161"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="11sp"
            android:text="들이 "/>

        <TextView
            android:id="@+id/txt_average"
            android:layout_below="@+id/txt_same_age_bold"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:textSize="15sp"
            android:fontFamily="@font/notosanskr_regular_hestia"
            android:textColor="#616161"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="11sp"
            android:text="평균 "/>
        <TextView
            android:id="@+id/txt_average_coin_mini"
            android:layout_toRightOf="@+id/txt_average"
            android:layout_below="@+id/txt_same_age_bold"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:textSize="15sp"
            android:fontFamily="@font/notosanskr_regular_hestia"
            android:textColor="#616161"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="11sp"
            android:text="2,500"/>
        <TextView
            android:layout_marginBottom="27dp"
            android:layout_toRightOf="@+id/txt_average_coin_mini"
            android:layout_below="@+id/txt_same_age_bold"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:textSize="15sp"
            android:fontFamily="@font/notosanskr_regular_hestia"
            android:textColor="#616161"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="11sp"
            android:text="원을 저금했습니다"/>



    </RelativeLayout>
</RelativeLayout>

    <View
        android:id="@+id/line2"
        android:layout_below="@+id/rl_aver_coin_text"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="#f5f5f5"/>
    <RelativeLayout
        android:layout_marginLeft="24dp"
        android:id="@+id/rl_good_deposit_total_money"
        android:layout_below="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="72dp">
        <ImageView
            android:id="@+id/ic_qna_coin_16_px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_qna_coin_16_px"/>
        <TextView
            android:layout_marginLeft="6dp"
            android:layout_marginVertical="23dp"
            android:layout_toRightOf="@+id/ic_qna_coin_16_px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskr_regular_hestia"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:textColor="#616161"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="10sp"
            android:text="총 누적 저금액"/>

        <TextView
            android:id="@+id/txt_good_deposit_total_money"
            android:gravity="center"
            android:layout_toLeftOf="@+id/txt_won"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:fontFamily="@font/notosanskr_bold_hestia"
            android:textColor="#212121"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="8sp"
            android:text=""
            />
        <TextView
            android:id="@+id/txt_won"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:fontFamily="@font/notosanskr_bold_hestia"
            android:textColor="#212121"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="8sp"
            android:text=" 원"
            />
    </RelativeLayout>
    <View
        android:id="@+id/line3"
        android:layout_below="@+id/rl_good_deposit_total_money"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"/>
</RelativeLayout>