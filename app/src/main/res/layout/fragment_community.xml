<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relative_community_top"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:letterSpacing="-0.01"
            android:fontFamily="@font/notosanskr_bold_hestia"
            android:text="커뮤니티"
            android:textColor="#424242"
            android:textSize="32sp" />

        <ImageView
            android:id="@+id/community_btn_search_id"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="14dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_magnifying_glass_32_px" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/first_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_community_top"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/community_my_profil_img"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:background="@drawable/community_profil_img"
            android:src="@drawable/person" />

        <TextView
            android:id="@+id/community_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/community_my_profil_img"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:letterSpacing="-0.01"
            android:text="오늘은"
            android:textColor="#424242"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/community_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/community_user_name"
            android:layout_marginLeft="13dp"
            android:gravity="center"
            android:letterSpacing="-0.01"
            android:fontFamily="@font/notosanskr_medium_hestia"
            android:text="today01"
            android:textColor="@color/very_light_pink"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/community_follower_num_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="113dp"
            android:layout_marginTop="6dp"
            android:gravity="center_horizontal"
            android:letterSpacing="-0.01"
            android:text="10"
            android:textColor="#424242"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/follower_hello_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/community_follower_num_txt"
            android:layout_marginLeft="113dp"
            android:gravity="center_horizontal"
            android:letterSpacing="-0.01"
            android:text="팔로워"
            android:fontFamily="@font/notosanskr_medium_hestia"
            android:textColor="#aeaeae"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/community_following_num_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="179dp"
            android:layout_marginTop="4dp"
            android:letterSpacing="-0.01"
            android:text="2"
            android:textColor="#424242"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/following_hello_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/community_following_num_txt"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="179dp"
            android:letterSpacing="-0.01"
            android:text="팔로잉"
            android:fontFamily="@font/notosanskr_medium_hestia"
            android:textColor="#aeaeae"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/community_btn_emotion_box"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="245dp"
            android:src="@drawable/ic_emotionbox_24_px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/community_btn_emotion_box"
            android:layout_marginLeft="247dp"
            android:layout_marginTop="3dp"
            android:letterSpacing="-0.01"
            android:text="감정박스"
            android:fontFamily="@font/notosanskr_medium_hestia"
            android:textColor="#aeaeae"
            android:textSize="14sp"
            android:id="@+id/textView" />


        <RelativeLayout
            android:layout_marginTop="21dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/follower_hello_txt"
            android:layout_marginLeft="108dp"
            >

            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_width="255dp"
                android:layout_height="32dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/custom_button_radius"
                android:backgroundTint="#f5f5f5">
                <TextView
                    android:id="@+id/community_my_profil_status_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:textColor="#aeaeae"
                    android:layout_centerVertical="true"
                    android:text="건들면 물어요"
                    android:fontFamily="@font/notosanskr_medium_hestia"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/community_my_profile_emotion_mark"
                android:layout_width="40dp"
                android:background="@drawable/img_sns_profile_emotion_bad_3_40_px"
                android:layout_height="40dp"
                />
            <ImageView
                android:id="@+id/img_status_edit"
                android:layout_alignParentRight="true"
                android:layout_marginRight="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_status_edit_24_px"/>


        </RelativeLayout>

    </RelativeLayout>


    <View
        android:id="@+id/community_line_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/first_relative"
        android:layout_marginTop="24dp"
        android:background="#eeeeee" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/community_line_view"
        android:layout_marginTop="13.5dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/community_friends_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</RelativeLayout>