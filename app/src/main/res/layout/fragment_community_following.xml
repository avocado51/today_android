<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/community_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back_32_px"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        />
    <TextView
        android:id="@+id/community_following_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/community_back_btn"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="13dp"
        android:text="팔로잉"
        android:textSize="20sp"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/community_following_list_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="팔로잉 리스트"
        android:textColor="#888888"
        android:textSize="14sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:layout_below="@id/community_back_btn"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="26dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/community_following_list_txt"
        android:id="@+id/community_following_recycler_view">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>