<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Splash">

    <RelativeLayout
        android:id="@+id/rl_main_bad_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffdb08">

        <ImageView
            android:id="@+id/main_bad_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/img_main_bad_1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/logo_main_white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/txt_main_bad_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_main_bad_img"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/txt_main_bad_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskr_bold_hestia"
            android:letterSpacing="-0.02"
            android:text="이승언"
            android:textColor="#424242"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_main_bad_user_name"
            android:fontFamily="@font/notosanskr_medium_hestia"
            android:letterSpacing="-0.02"
            android:text="님 힘내세요!"
            android:textColor="#424242"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_main_bad_user_name"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/notosanskr_medium_hestia"
                android:letterSpacing="-0.01"
                android:text="최근 "
                android:textColor="#9e9e9e"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txt_main_bad_user_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_main_bad_user_name"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/notosanskr_medium_hestia"
                android:letterSpacing="-0.01"
                android:text="이승언"
                android:textColor="#9e9e9e"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_main_bad_user_name"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/notosanskr_medium_hestia"
                android:letterSpacing="-0.01"
                android:text="님이 행복했던 3일"
                android:textColor="#9e9e9e"
                android:textSize="13sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_no_comfort_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_main_bad_img"
        android:layout_centerInParent="true"
        android:visibility="gone"

        >

        <ImageView
            android:id="@+id/img_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_emotion_good_1" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/main_bad_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txt_main_bad_img">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>