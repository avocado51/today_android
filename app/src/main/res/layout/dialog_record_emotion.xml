<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/dialog_record_emotion_rl"
        android:layout_width="304dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/button_border">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="52dp"
            android:fontFamily="@font/notosanskr_bold_hestia"
            android:letterSpacing="-0.01"
            android:text="이승언님,"
            android:textColor="#424242"
            android:textSize="20sp" />

        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_name"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/notosanskr_medium_hestia"
            android:letterSpacing="-0.01"
            android:text="오늘의 감정을 기록하시겠어요?"
            android:textColor="#424242"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/btn_save_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="32dp"
            android:layout_marginRight="32dp"
            android:fontFamily="@font/notosanskr_medium_hestia"
            android:letterSpacing="-0.018"
            android:text="저장"
            android:textColor="#03a5ff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/btn_cancel_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/notosanskr_medium_hestia"
            android:layout_marginRight="32dp"
            android:layout_toLeftOf="@+id/btn_save_dialog"
            android:letterSpacing="-0.018"
            android:text="취소"
            android:textColor="#bdbdbd"
            android:textSize="14sp" />
    </RelativeLayout>
</RelativeLayout>